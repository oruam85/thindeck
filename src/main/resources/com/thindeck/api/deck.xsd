<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:simpleType name="tcp">
        <xs:restriction base="xs:integer">
            <xs:maxInclusive value="65535"/>
            <xs:minInclusive value="1"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:complexType name="port">
        <xs:all>
            <xs:element name="in" type="tcp"/>
            <xs:element name="out" type="tcp"/>
        </xs:all>
    </xs:complexType>
    <xs:complexType name="container">
        <xs:all>
            <xs:element name="cid">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value="[0-9a-f]{64}"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="ports">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="port" type="port" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="dir">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value=".+"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="tank">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value=".+"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="type">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="green"/>
                        <xs:enumeration value="blue"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
        </xs:all>
    </xs:complexType>
    <xs:element name="deck">
        <xs:complexType>
            <xs:all>
                <xs:element name="uri" type="xs:anyURI" minOccurs="0"/>
                <xs:element name="domains" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="domain" minOccurs="1" maxOccurs="unbounded">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:pattern value=".+"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="ports" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="port" type="tcp" minOccurs="1" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="tanks" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="tank" minOccurs="0" maxOccurs="unbounded">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:pattern value=".+"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="containers" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="container" type="container" minOccurs="0" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:all>
        </xs:complexType>
        <xs:unique name="tankHost">
            <xs:selector xpath="./tanks/tank" />
            <xs:field xpath="." />
        </xs:unique>
        <xs:unique name="containerID">
            <xs:selector xpath="./containers/container" />
            <xs:field xpath="cid" />
        </xs:unique>
    </xs:element>
</xs:schema>
